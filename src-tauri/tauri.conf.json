{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sat-tracker-in-rust",
  "version": "0.1.0",
  "identifier": "com.sat-tracker-in-rust",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sat Tracker",
        "width": 1200,
        "height": 1000,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "http": {
      "all": true,
      "request": true
    },
    "opener": {
      "requireLiteralLeadingDot": false
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
